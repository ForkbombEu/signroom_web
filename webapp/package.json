{
	"name": "signroom_web - webapp",
	"author": {
		"name": "Puria Nafisi Azizi",
		"email": "puria@dyne.org"
	},
	"description": "Electronic signature service based on Zenroom",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"reload": "pm2 startOrGracefulReload ecosystem.config.cjs",
		"start": "concurrently \"npm preview\" \"../admin/pb serve\"",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"types": "npx -y pocketbase-typegen --db ../admin/pb_data/data.db --out src/lib/pocketbase-types.ts"
	},
	"devDependencies": {
		"@playwright/test": "^1.35.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.20.4",
		"@types/debug": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.2.0",
		"debug": "^4.3.4",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"sveltekit-superforms": "1.0.0-rc.4",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.3",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.32.0",
		"zod": "^3.21.4"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/inter": "^5.0.2",
		"@popperjs/core": "^2.11.8",
		"classnames": "^2.3.2",
		"clsx": "^1.2.1",
		"dayjs": "^1.11.8",
		"flowbite": "^1.6.5",
		"flowbite-svelte": "^0.37.4",
		"flowbite-svelte-blocks": "^0.3.8",
		"pocketbase": "^0.15.2",
		"svelte-heros": "^3.12.0",
		"svelte-heros-v2": "^0.7.1",
		"zenroom": "^3.3.1"
	}
}
